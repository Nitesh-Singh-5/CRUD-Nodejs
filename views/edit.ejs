<%- include('./partials/header.ejs')  %> 

<div class="container">
    <div class="row">
        <div class="col-sm-6 mt-5">
            <h2 class="alert alert-success text-center">Update Student</h2>
            <form action="/student/update/<%= data._id %> " method="post">
                <div class="mb-3">
                    <label for="name" class="form-label">Name</label>
                    <input type="text" class="form-control" name="name" id="name" value="<%= data.name %>">

                </div>
                <div class="mb-3">
                    <label for="age" class="form-label">Age</label>
                    <input type="text" value="<%= data.age %>" class="form-control" name="age" id="age">
                </div>
                <div class="mb-3">
                    <label for="fees" class="form-label">fees</label>
                    <input type="text" value="<%= data.fees %>" class="form-control" name="fees" id="fees">
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
                <button type="submit" href="/student" class="btn btn-secondary">Back</button>
            </form>
        </div>
        
    </div>
</div>

<%- include('./partials/footer.ejs')  %>